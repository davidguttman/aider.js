{
  "name": "@dguttman/aider-js",
  "version": "1.0.0",
  "description": "Node.js wrapper for the Aider tool using a self-contained Python environment via uv",
  "main": "src/aider.js",
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "test": "cross-env NODE_ENV=test ava test/**/*.test.js",
    "test:record": "cross-env RECORD_MODE=true NODE_ENV=test ava test/**/*.test.js",
    "cleanup": "node scripts/cleanup.js"
  },
  "files": [
    "src",
    "python",
    "scripts",
    "bin",
    ".venv"
  ],
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "aider",
    "ai",
    "coding",
    "llm",
    "python"
  ],
  "author": "David Guttman <david@davidguttman.com> (http://davidguttman.com/)",
  "license": "MIT",
  "devDependencies": {
    "ava": "^6.2.0",
    "cross-env": "^7.0.3",
    "cross-fetch": "^4.0.0",
    "echoproxia": "^1.1.0",
    "fs-extra": "^11.2.0",
    "tar": "^7.2.0",
    "unzipper": "^0.12.1"
  }
}
